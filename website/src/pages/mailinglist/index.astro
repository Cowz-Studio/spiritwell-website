---
import BaseLayout from "../../layouts/BaseLayout.astro";

import SubscribeForm from "./SubscribeForm";
---

<BaseLayout>
  <div class="flex flex-col w-screen items-center gap-y-5">
    <p class="text-4xl pt-10 px-4">Join the MAILING LIST!</p>
    <div class="text-2xl max-w-screen-sm px-4">
      <p class="whitespace-pre-line ">
        Keep up to date with the development progress of SPIRITWELL! 

        E-mails will include:
      </p>
      <ul class="list-disc list-inside">
        <li>Work-in-progress art and music</li>
        <li>Exclusive developer commentary</li>
        <li>Key dates</li>
        <li>And maybe even something else...</li>
      </ul>
 
    </div>
    <div class="flex flex-col items-center gap-y-5">
      <SubscribeForm client:idle />
    </div>
  </div>
</BaseLayout>
